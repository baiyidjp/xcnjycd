/* pages/home/childCmp/menu-item/menu-item.wxss */
.menu-item {
  padding: 0 0 10px 10px;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  display: flex;
  align-items: center;
}

.food-icon {
  width: 100px;
  height: 100px;
  border-radius: 10px;
}

.food-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  height: 100px;
  width: calc(100% - 100px - 30px);
  padding: 5px 10px;
}

.food-info .title {
  color: #353535;
  font-size: 20px;
  font-weight: 500;
}

.food-info .sold {
  color: #888888;
  font-size: 14px;
}

.food-info .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between
}

.food-info .price {
  color: #e64340;
  font-size: 20px;
  font-weight: 500;
}

.count-info {
  display: flex;
}

.count-info image {
  width: 25px;
  height: 25px;
}

.count-info .count {
  margin: 0 5px;
}
