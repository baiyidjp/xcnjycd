/* pages/home/childCmp/cart-list/cart-list.wxss */
.cart-list {
  position: fixed;
  right: 0;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0);
  z-index: 99;
}

.back-view {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .1); 
  z-index: -1;
}

.cart-list-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-end;
}

.cart-list-scroll {
  max-height: 300px;
  width: 80%;
}

.total-info {
  width: 80%;
  height: 44px;

  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #ffffff;
}

.total-price {
  display: flex;
  margin-left: 10px;
  color: #888888;
  font-size: 14px;
}

.price {
  color:  #e64340;
  font-size: 15px;
  font-weight: 500;
}

.option-container {
  display: flex;
}

.option-button {
  margin-right: 10px;
  padding: 5px;
  background-color: #09bb07;
  border-radius: 4px;
  height: 20px;
  width: 40px;
  line-height: 20px;
  text-align: center;
  color: #ffffff;
}