.cart-list-item {
  padding: 10px 10px 0 10px;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  height: 59px;
}

.item-icon {
  width: 40px;
  height: 40px;
  border-radius: 4px;
}

.item-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;

  width: calc(100% - 40px - 30px);
  padding: 0 10px 0;
}

.item-info .title {
  color: #353535;
  font-size: 15px;
}

.item-info .bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 25px;
}

.item-info .price {
  color: #e64340;
  font-size: 15px;
}

.count-info {
  display: flex;
}

.count-info image {
  width: 25px;
  height: 25px;
}

.count-info .count {
  margin: 0 5px;
}